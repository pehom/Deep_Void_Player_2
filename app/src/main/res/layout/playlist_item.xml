<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="6dp"
    >
    <TextView
        android:id="@+id/playlistTitleTextView"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="Playlist title"
        android:textAlignment="viewStart"
        android:gravity="start"/>
    <ImageView
        android:id="@+id/addPlaylistToQueueImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_add_accent_24dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/editPlaylistImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_edit_accent_24dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/deletePlaylistImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_delete_forever_accent_24dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/playlistMoreActionsImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_more_vert_accent_24dp"
        android:alpha="90"
        android:padding="4dp"
        android:layout_gravity="end"/>

</LinearLayout>